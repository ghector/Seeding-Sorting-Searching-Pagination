@model IEnumerable<Lesson.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>




@using (Html.BeginForm("Index", "Students", FormMethod.Get))
{
    <p>
        Find by Name : @Html.TextBox("searchname")
        <input type="submit" value="Search" />
    </p>
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Card.Title)
        </th>
        <th>
            
            @Html.ActionLink("Name","Index",new { sortorder = ViewBag.NameSortParam })


        </th>
        <th>
            @Html.ActionLink("Age", "Index", new { sortorder = ViewBag.AgeSortParam })
        </th>
        <th>
            @Html.ActionLink("Score", "Index", new { sortorder = ViewBag.ScoreSortParam })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Card.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
